@{
    ViewData["Title"] = "Home Page";
    Layout = "_AdminLayout";
}

<div class="container">
    <h1 class="ms-4 mt-2 text-center">Karyawan</h1>
    <br>

    <div class="my-2">
        <button id="buttonInputKaryawan" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalInputKaryawan">Input Karyawan Baru</button>
    </div>

    <!-- Tabel -->
    <table id="tabelKaryawan" class="table table-striped">
        <thead class="table-light">
            <tr>
                <th>No</th>
                <th>Nama</th>
                <th>Email</th>
                <th>Nomer Rekening</th>
                <th>Nomer Telepon</th>
                <th>Jabatan</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="tbodyKaryawan">
        </tbody>
    </table>

    <!-- Modal Input -->

    <div id="modalInputKaryawan" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Input Karyawan Baru</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form autocomplete="off">
                        <div class="form-group">
                            <label for="name">Nama Lengkap</label>
                            <input type="text" class="form-control" id="inputNama" placeholder="Nama Lengkap">
                        </div>
                        <div class="form-group">
                            <label for="email">E-mail</label>
                            <input type="text" class="form-control" id="inputEmail" placeholder="E-mail">
                        </div>
                        <div class="form-group">
                            <label for="telepon">Nomer Telepon</label>
                            <input type="text" class="form-control" id="inputTelepon" placeholder="Nomer Telepon">
                        </div>
                        <div class="form-group">
                            <label for="rekening">Nomer Rekening</label>
                            <input type="text" class="form-control" id="inputRekening" placeholder="Nomer Rekening">
                        </div>
                        @*<div class="form-group">
                            <label for="rekening">Jabatan</label>
                            <input type="number" class="form-control" id="inputJabatanID" placeholder="Jabatan ID">
                        </div>*@
                        <div class="form-group">
                        <label for="inputJabatan">Jabatan</label>
                        <select id="selectJabatan" class="form-control">
                        </select>
                        </div>
                        <button type="button" class="btn btn-primary" onclick="InputKaryawan()" data-bs-dismiss="modal">Submit</button>
                    </form>
                </div>
                @*<div class="modal-footer">
                        <button type="button" class="btn btn-primary">Save changes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>*@
            </div>
        </div>
    </div>

    <!-- Modal Delete -->

    <div id="modalDeleteKaryawan" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-danger ">
                    <h5 class="modal-title text-white font-weight-bold fs-15 w-100 text-center">Hapus Karyawan</h5>
                    <button type="button" class="close btn-close-white" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h1 id="deleteConfirmed"class="text-center"></h1>
                </div>
                <div class="modal-footer">
                        <button id="buttonDeleteConfirmed" type="button" class="btn btn-danger" onclick="DeleteKaryawan()" data-bs-dismiss="modal">Delete</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
            </div>
        </div>
    </div>

    <!-- Modal Update -->

    <div id="modalUpdateKaryawan" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Karyawan</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form autocomplete="off">
                        <div class="form-group">
                            <label for="name">Nama Lengkap</label>
                            <input type="text" class="form-control" id="editNama" placeholder="Nama Lengkap">
                        </div>
                        <div class="form-group">
                            <label for="email">E-mail</label>
                            <input type="email" class="form-control" id="editEmail" placeholder="E-mail">
                        </div>
                        <div class="form-group">
                            <label for="telepon">Nomer Telepon</label>
                            <input type="tel" class="form-control" id="editTelepon" placeholder="Nomer Telepon">
                        </div>
                        <div class="form-group">
                            <label for="rekening">Nomer Rekening</label>
                            <input type="text" class="form-control" id="editRekening" placeholder="Nomer Rekening">
                        </div>
                        <div class="form-group">
                            <label for="jabatan">Jabatan</label>
                            <select id="selectEditJabatan" class="form-control">
                            </select>
                        </div>
                        <button id="submitUpdate" type="button" class="btn btn-primary" onclick="UpdateKaryawan()" data-bs-dismiss="modal">Submit</button>
                    </form>
                </div>
                @*<div class="modal-footer">
                        <button type="button" class="btn btn-primary">Save changes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>*@
            </div>
        </div>
    </div>

</div>


    


