@{
    ViewData["Title"] = "Home Page";
    Layout = "_AdminLayout";
}

<div class="container">
    <h1 class="ms-4 mt-2 text-center">Karyawan</h1>
    <br>

    <button class = "btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalInputKaryawan">Input Karyawan Baru</button>

    <!-- Tabel -->
    <table id="tabelKaryawan" class="table table-striped table-hover my-2">
        <thead class="table-dark">
            <tr>
                <th>No</th>
                <th>Nama</th>
                <th>Email</th>
                <th>Nomer Rekening</th>
                <th>Nomer Telepon</th>
                <th>Jabatan</th>
            </tr>
        </thead>
        <tbody id="tbodyKaryawan">
        </tbody>
    </table>

    <!-- Modal -->

    <div id="modalInputKaryawan" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Input Karyawan Baru</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="name">Nama Lengkap</label>
                            <input type="text" class="form-control" id="inputNama" aria-describedby="emailHelp" placeholder="Nama Lengkap">
                        </div>
                        <div class="form-group">
                            <label for="email">E-mail</label>
                            <input type="email" class="form-control" id="inputEmail" placeholder="E-mail">
                        </div>
                        <div class="form-group">
                            <label for="telepon">Nomer Telepon</label>
                            <input type="tel" class="form-control" id="inputTelepon" placeholder="Nomer Telepon">
                        </div>
                        <div class="form-group">
                            <label for="rekening">Nomer Rekening</label>
                            <input type="text" class="form-control" id="inputRekening" placeholder="Nomer Rekening">
                        </div>
                        <div class="form-group">
                            <label for="inputJabatan">Jabatan</label>
                            <select id="inputJabatan" class="form-control">
                                <option selected>Jabatan</option>
                                <option>...</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
                @*<div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>*@
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <script src="~/adminLTE/dist/js/payroll/karyawan.js"></script>
}

